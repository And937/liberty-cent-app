
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authorized users to upload to their own verification folder
    match /verificationDocs/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Deny all other reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
